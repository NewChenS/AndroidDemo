<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.skymxc.demo.thread.MainActivity">

    <Button
        android:id="@+id/create_thread"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/create_thread"
        android:onClick="onClick"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="资源共享及同步"
        android:id="@+id/sync"
        app:layout_constraintLeft_toRightOf="@+id/create_thread"
        android:onClick="onClick"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="消息机制"
        android:id="@+id/message"
        app:layout_constraintLeft_toRightOf="@+id/sync"
        android:onClick="onClick"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="线程池"
        android:id="@+id/executor"
        app:layout_constraintLeft_toRightOf="@+id/message"
        android:onClick="onClick"/>
</android.support.constraint.ConstraintLayout>
