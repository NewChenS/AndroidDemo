                                android:layout_column="2"
                                android:layout_row="0"
                        />
                        <Button
                                android:text="互助"
                                android:layout_columnWeight="1"
                                android:layout_column="0"
                                android:layout_row="1"
                        />
                        <Button
                                android:text="招聘求职"
                                android:layout_columnWeight="1"
                                android:layout_column="1"
                                android:layout_row="1"
                        />
                        <Button
                                android:text="官府"
                                android:layout_columnWeight="1"
                                android:layout_column="2"
                                android:layout_row="1"
                        />
                    </GridLayout>
                </LinearLayout>

